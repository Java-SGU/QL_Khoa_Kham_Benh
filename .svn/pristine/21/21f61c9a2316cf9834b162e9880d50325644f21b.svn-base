    private void jbtnLuuActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbtnLuuActionPerformed
        try {
            if("".equals(kiemtraNhap())){
                //lay thong tin tu form
                String maBN = jtxtMaBN.getText().trim();
                String hoten = jtxtHoTen.getText().trim();
                String cmnd = jtxtCmnd.getText().trim();
                String diachi = jtxtDiaChi.getText().trim();
                String dienthoai = jtxtDienThoai.getText().trim();
                String mabh = jtxtMaBH.getText().trim();
                String namSinh = jcbNamsinh.getSelectedItem().toString();
                String gioitinh = jrabtnNam.isSelected()?"Nam":"Nữ";
                int bhyt = jrabtnCo.isSelected()? 1 : 0;
                int vuottuyen = jCheckBox1.isSelected()? 1: 0;
//                SimpleDateFormat format = new SimpleDateFormat("yyyy-MM-dd");
//                String nam = jcbNamHH.getSelectedItem().toString();
//                String thang = jcbThangHH.getSelectedItem().toString();
//                String ngay = jcbNgayHH.getSelectedItem().toString();
//                java.util.Date date = format.parse(nam + "-" + thang + "-" + ngay);
                Date ngayHH = null;
                if(jrabtnCo.isSelected())
                    ngayHH = layNgayHH();
                else
                    ngayHH = null;
                //khoi tao doi tuong benh nhan
                DTOBenhNhan dtoBenhNhan = new DTOBenhNhan();
                dtoBenhNhan.setMaBN(maBN);
                dtoBenhNhan.setHoten(hoten);
                dtoBenhNhan.setCMND(cmnd);
                dtoBenhNhan.setDiachi(diachi);
                dtoBenhNhan.setDienthoai(dienthoai);
                dtoBenhNhan.setMaBH(mabh);
                dtoBenhNhan.setNgaysinh(namSinh);
                dtoBenhNhan.setGioitinh(gioitinh);
                dtoBenhNhan.setBHYT(bhyt);
                dtoBenhNhan.setVuottuyen(vuottuyen);
                dtoBenhNhan.setNgayhethan(ngayHH);
                
                //cap nhat du lieu
                if(bllBenhNhan.capnhatThongTinBenhNhan(dtoBenhNhan))
                    JOptionPane.showMessageDialog(null, "Đã cập nhật thành công");
                else
                    JOptionPane.showMessageDialog(null, "Cập nhật thất bại");
            }
            else
                JOptionPane.showMessageDialog(null, kiemtraNhap());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, "Xảy ra lỗi trong quá trình cập nhật bệnh nhân");
        }
    }//GEN-LAST:event_jbtnLuuActionPerformed

