    //lay thong tin benh nhan
    private void layThongTin(String maBN){
        DTOBenhNhan dtoBenhNhan = bllBenhNhan.layBNTheoMa(maBN);
        if(dtoBenhNhan != null){
            jtxtCmnd.setText(dtoBenhNhan.getCMND());
            jtxtDiaChi.setText(dtoBenhNhan.getDiachi());
            jtxtDienThoai.setText(dtoBenhNhan.getDienthoai());
            jtxtHoTen.setText(dtoBenhNhan.getHoten());
            jtxtMaBH.setText(dtoBenhNhan.getMaBH());
            jtxtMaBN.setText(dtoBenhNhan.getMaBN());
            if("Nam".equals(dtoBenhNhan.getGioitinh()))
                jrabtnNam.setSelected(true);
            else
                jrabtnNu.setSelected(true);
            if(dtoBenhNhan.getBHYT()==1){//trường hợp có bảo hiểm y tế
                jrabtnCo.setSelected(true);
                Date ngayHetHan = dtoBenhNhan.getNgayhethan();
                Calendar cal = Calendar.getInstance();
                cal.setTime(ngayHetHan);
                jcbNamHH.setSelectedItem(String.valueOf(cal.get(Calendar.YEAR)));
                jcbThangHH.setSelectedItem(String.valueOf(cal.get(Calendar.MONDAY)));
                jcbNgayHH.setSelectedItem(String.valueOf(cal.get(Calendar.DAY_OF_MONTH)));
            }
            else{
                jrabtnKhong.setSelected(true);
                jtxtMaBH.setEnabled(false);
                jCheckBox1.setEnabled(false);
                jcbNgayHH.setEnabled(false);
                jcbThangHH.setEnabled(false);
                jcbNamHH.setEnabled(false);
            }
            if(dtoBenhNhan.getVuottuyen()==1)
                jCheckBox1.setSelected(true);
            jcbNamsinh.setSelectedItem(dtoBenhNhan.getNgaysinh().toString());
            SimpleDateFormat formatDate = new SimpleDateFormat("yyyy");
            
            int tuoi = Integer.valueOf(formatDate.format(new java.util.Date())) - Integer.valueOf(dtoBenhNhan.getNgaysinh());
            jtxtTuoi.setText(String.valueOf(tuoi));
        }
    }
