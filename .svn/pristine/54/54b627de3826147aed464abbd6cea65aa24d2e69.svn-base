    private void jTableDSBNMousePressed(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jTableDSBNMousePressed
        try {
            clearField();
            String maBN = jTableDSBN.getValueAt(jTableDSBN.getSelectedRow(), 0).toString();
            DTOBenhNhan dtoBenhNhan = bllBenhNhan.layBNTheoMa(maBN);
            if(dtoBenhNhan != null){
                jtxtMaBN.setText(dtoBenhNhan.getMaBN());
                jtxtHoTen.setText(dtoBenhNhan.getHoten());
                jtxtDiaChi.setText(dtoBenhNhan.getDiachi());
                jtxtDienThoai.setText(dtoBenhNhan.getDienthoai());
                jtxtCmnd.setText(dtoBenhNhan.getCMND());
                jtxtMaBH.setText(dtoBenhNhan.getMaBH());
                jtxtNgaySinh.setText(dtoBenhNhan.getNgaysinh());
                if("Nam".equals(dtoBenhNhan.getGioitinh())){
                    jrabtnNam.setSelected(true);
                }
                else
                    jrabtnNu.setSelected(true);
                
                if(dtoBenhNhan.getBHYT()==1)
                    jrabtnCo.setSelected(true);
                else
                    jrabtnKhong.setSelected(true);
                
                if(dtoBenhNhan.getVuottuyen()==1)
                    jCheckBox1.setSelected(true);
                else
                    jCheckBox1.setSelected(false);
                if(dtoBenhNhan.getNgayhethan() != null)
                    txtNgayHetHan.setText(dtoBenhNhan.getNgayhethan().toString());
                
                SimpleDateFormat format = new SimpleDateFormat("yyyy");
                java.util.Date date = new java.util.Date();
                String currentYear = format.format(date);
                int tuoi = Integer.valueOf(currentYear) - Integer.valueOf(dtoBenhNhan.getNgaysinh());
                jtxtTuoi.setText(String.valueOf(tuoi));
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, "Loi phat sinh, khong the lay thong tin nguoi dung");
        }
    }//GEN-LAST:event_jTableDSBNMousePressed

