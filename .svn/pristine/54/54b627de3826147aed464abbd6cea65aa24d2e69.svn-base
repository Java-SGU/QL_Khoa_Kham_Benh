    private void btnReloadActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnReloadActionPerformed
        for (int i = modelBenhNhan.getRowCount() -1; i >= 0; i--) {
                modelBenhNhan.removeRow(i);
            }
        for(DTOBenhNhan dtoBenhNhan : bllBenhNhan.layDSBenhNhan()){
            modelBenhNhan.addRow(new Object[]{dtoBenhNhan.getMaBN(), dtoBenhNhan.getHoten(), dtoBenhNhan.getGioitinh(),
                                       dtoBenhNhan.getNgaysinh(), dtoBenhNhan.getCMND(), dtoBenhNhan.getBHYT()==1?"Có":"Không" });
        }
    }//GEN-LAST:event_btnReloadActionPerformed

    private void jbtnXoaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbtnXoaActionPerformed
        try {
            int[] dong = jTableDSBN.getSelectedRows();
            if(dong.length > 0){
                if(JOptionPane.showConfirmDialog(null, "Bạn có chắc muốn xóa?", "Thông báo", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE)==JOptionPane.YES_OPTION){
                    int dem = 0;
                    for(int i = dong.length - 1; i >= 0; i--){
                        String maBn = jTableDSBN.getValueAt(dong[i], 0).toString();
                        bllBenhNhan.xoaBenhNhan(maBn);
                        modelBenhNhan.removeRow(dong[i]);
                        dem++;
                    }
                    if(dem==dong.length){
                        JOptionPane.showMessageDialog(null, "Đã xóa các bệnh nhân thành công");
                    }
                }
            }
            else
                JOptionPane.showMessageDialog(null, "Vui lòng chọn mục muốn xóa");
        } catch (Exception e) {
        }
    }//GEN-LAST:event_jbtnXoaActionPerformed

