    private void jTbHSKhamBenhMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jTbHSKhamBenhMouseClicked
         try {
            clearField();
            String maHS = jTbHSKhamBenh.getValueAt(jTbHSKhamBenh.getSelectedRow(), 0).toString();
            DTOHoSoKhamBenh dtoHS = bllHS.LayHSTheoMa(maHS);
            if(dtoHS != null){
                jtxtMaBN.setText(dtoHS.getDtoBN().getMaBN());
                jtxtHoTen.setText(dtoHS.getDtoBN().getHoten());
                if("Nam".equals(dtoHS.getDtoBN().getGioitinh()))
                {
                    jrabtnNam.setSelected(true);
                }
                else
                    jrabtnNu.setSelected(true);
                jtxtBacSi.setText(dtoHS.getBacSi());
                jtxtMaHS.setText(String.valueOf(dtoHS.getMaHS()));
                jtxtNgayKham.setText(String.valueOf(dtoHS.getNgayKham()));
                jtxtNgayTaiKham.setText(String.valueOf(dtoHS.getNgayTaiKham()));
                jtxtPhongKham.setText(dtoHS.getDtoPK().getTenpk());
                //kiem tra co BHYT hay ko
                if(dtoHS.getDtoBN().getBHYT()==1)
                    jrabtnCo.setSelected(true);
                else
                    jrabtnKhong.setSelected(true); 
                //kiem tra vuot tuyen
                if(dtoHS.getDtoBN().getVuottuyen()==1)
                    jckbxVuotTuyen.setSelected(true);
                else
                    jckbxVuotTuyen.setSelected(false);
                jtxtMaBH.setText(dtoHS.getDtoBN().getMaBH());
                //kiem tra ngay het han BHYT
                if(dtoHS.getDtoBN().getNgayhethan() != null)
                    jtxtNgayHetHan.setText(dtoHS.getDtoBN().getNgayhethan().toString());
                jtxtChanDoan.setText(dtoHS.getChanDoan());
            } 
        }
            catch (Exception e) {
                JOptionPane.showMessageDialog(null, "Lấy dữ liệu thất bại");
        }
    }//GEN-LAST:event_jTbHSKhamBenhMouseClicked

    private void jbtnXoaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbtnXoaActionPerformed
        try{
            int dong[] = jTbHSKhamBenh.getSelectedRows();
            if(dong.length > 0){
                if(JOptionPane.showConfirmDialog(null, "Bạn có chắc muốn xóa?", "Thông báo", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE)==JOptionPane.YES_OPTION){
                    int dem = 0;
                    for(int i = dong.length - 1; i >= 0; i--){
                        int maHS = Integer.valueOf(jTbHSKhamBenh.getValueAt(dong[i], 0).toString());
                        bllHS.XoaHoSo(maHS);
                        modelHS.removeRow(dong[i]);
                        dem++;
                    }
                    if(dem==dong.length){
                        JOptionPane.showMessageDialog(null, "Đã xóa hồ sơ");
                    }
                }
            }
            else
                JOptionPane.showMessageDialog(null, "Vui lòng chọn mục muốn xóa");
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null, "Bị lỗi, không thể xóa!");
        }
    }//GEN-LAST:event_jbtnXoaActionPerformed

    private void jbtnTimActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbtnTimActionPerformed
        try {
            for (int i = modelHS.getRowCount() -1; i >= 0; i--) {
                modelHS.removeRow(i);
            }
            int tim = Integer.valueOf(jtxtTim.getText());
            ArrayList<DTOHoSoKhamBenh> dsHS = bllHS.TimHoSo(tim);
            for(DTOHoSoKhamBenh dtoHS : dsHS){
                modelHS.addRow(new Object[]{dtoHS.getMaHS(), dtoHS.getNgayKham(), dtoHS.getDtoPK().getTenpk(),
                        dtoHS.getChanDoan()});
            }
        } catch (Exception e) {
        }
    }//GEN-LAST:event_jbtnTimActionPerformed

