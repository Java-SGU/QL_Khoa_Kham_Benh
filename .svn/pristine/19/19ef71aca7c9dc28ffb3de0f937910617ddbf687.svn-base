    //lay du lieu dua vao bang
     public void DanhSachHoSo() {
         try {
            modelHS = new DefaultTableModel();
            String muc[] = {"Mã hồ sơ", "Ngày khám", "Phòng khám", "Chẩn đoán"};
            modelHS.setColumnIdentifiers(muc);
            for(DTOHoSoKhamBenh dtoHS: bllHS.LayDSHoSo()){
                modelHS.addRow(new Object[]{dtoHS.getMaHS(), dtoHS.getNgayKham(), 
                    dtoHS.getDtoPK().getTenpk(), dtoHS.getChanDoan()});
            }
            jTbHSKhamBenh.setModel(modelHS);
        } catch (Exception e) {
            System.err.print("Lấy dữ liệu không thành công");
        }
    }
