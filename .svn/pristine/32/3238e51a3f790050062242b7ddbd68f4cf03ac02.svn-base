    private void jbtnLuuActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbtnLuuActionPerformed
        try {
            if("".equals(KiemTra())){
                String matkhau = jtxtMK.getText().trim();
                String nhacmk = jtxtNhacMK.getText().trim();
                String email = jtxtEmail.getText().trim();
                DTONguoiDung dtoNgDung = new DTONguoiDung();
                dtoNgDung.setTenDN(this.tendn);
                dtoNgDung.setMatKhau(matkhau);
                dtoNgDung.setEmail(email);

                if(bllNgDung.SuaNguoiDung(dtoNgDung))
                         JOptionPane.showMessageDialog(null, "Đã cập nhật thông tin người dùng");
                else
                    JOptionPane.showMessageDialog(null, "Không thể cập nhật");
                }
                else{
                    JOptionPane.showMessageDialog(null, KiemTra());
            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, "Lỗi cập nhật");
        }
    }//GEN-LAST:event_jbtnLuuActionPerformed

