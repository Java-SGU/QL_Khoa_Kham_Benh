    //kiem tra nhap
    private String KiemTra(){
        String kq="";
        if("".equals(jtxtMK.getText().trim()))
            kq += "Vui lòng nhập mật khẩu\n";
        if("".equals(jtxtNhacMK.getText().trim()))
            kq += "Vui lòng nhắc lại mật khẩu\n";
        if(!jtxtNhacMK.getText().equals(jtxtMK.getText()))
            kq += "Mật khẩu nhắc lại không đúng\n";
        String emailreg = "^[_A-Za-z0-9-]+(\\.[_A-Za-z0-9-]+)*@[A-Za-z0-9]+(\\.[A-Za-z0-9]+)*(\\.[A-Za-z]{2,})$";
        if(!jtxtEmail.getText().trim().matches(emailreg))
            kq += "Địa chỉ mail không hợp lệ\n";
        if("".equals(jtxtEmail.getText().trim()))
            kq += "Vui lòng nhập email\n";
        return kq;
    }
