    private void jbtnLuuActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbtnLuuActionPerformed
        try {
            if("".equals(KiemTra()))
            {
                String MKHienTai = jtxtMKHienTai.getText();
                String MKMoi = jtxtMKMoi.getText();
                String NhacMK = jtxtNhacMK.getText();
                String tenDN = DangNhap.DN;
                if("".equals(tenDN))
                {
                    if(bllNgDung.DoiMatKhau(tenDN, tenDN, MKMoi))
                    {
                        JOptionPane.showMessageDialog(null, "Đã đổi mật khẩu thành công");
                        this.dispose();
                    }
                    else
                    {
                        JOptionPane.showMessageDialog(null, "Không thể đổi mật khẩu");
                    }
                }
                JOptionPane.showMessageDialog(null, KiemTra());
            }
        } 
        catch (Exception e) {
            JOptionPane.showMessageDialog(null, "Lỗi, kiểm tra lại");
        }
    }//GEN-LAST:event_jbtnLuuActionPerformed

    //kiểm tra nhập
    private String KiemTra(){
        String kq = "";
        if("".equals(jtxtMKHienTai.getText().trim()))
            kq += "Nhập mật khẩu hiện tại\n";
        if("".equals(jtxtMKMoi.getText().trim()))
            kq += "Nhập mật khẩu mới\n";
        if(jtxtMKMoi.getText() == null ? jtxtMKMoi.getText() != null : !jtxtMKMoi.getText().equals(jtxtNhacMK.getText()))
            kq += "Mật khẩu nhập lại không đúng";
        return kq;
    }
    
