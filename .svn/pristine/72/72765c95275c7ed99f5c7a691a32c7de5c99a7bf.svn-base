    private String checkInput() {
        String kq = "";
        if("".equals(txtTenDangNhap.getText().trim()))
            kq += "vui long nhap ten dang nhap\n";
        if("".equals(txtMatKhau.getText().trim()))
            kq += "vui long nhap mat khau";
        return kq;
    }
