    private void jButtonDangNhap(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonDangNhap
        try {
            if ("".equals(checkInput())) {
                String tenDN = txtTenDangNhap.getText().trim();
                String mk = txtMatKhau.getText().trim();
                DTONguoiDung dtoNgDung = ngDung.DangNhap(tenDN, mk);
                if (dtoNgDung != null) {
                    //usr = dtoNgDung.getTenDangNhap();
                    JOptionPane.showMessageDialog(null, "Đăng nhập thành công!");
                    MainMenu.jbtnDNhap.setEnabled(false);
                    MainMenu.jbtnDoiMK.setEnabled(true);
                    MainMenu.jbtnDXuat.setEnabled(true);
                    MainMenu.jbtnBNhan.setEnabled(true);
                    MainMenu.jbtnNVien.setEnabled(true);
                    MainMenu.jbtnNgDung.setEnabled(true);
                    MainMenu.jbtnPhongKham.setEnabled(true);
                    MainMenu.btnThongKe.setEnabled(true);
                    this.dispose();
                } else {
                    JOptionPane.showMessageDialog(null, "Tên hoặc mật khẩu không đúng");
                }
            } else {
                JOptionPane.showMessageDialog(null, checkInput());
            }
        } catch (Exception ex) {
            JOptionPane.showMessageDialog(null, "Loi dang nhap");
        }
    }//GEN-LAST:event_jButtonDangNhap

