    private void jTableDSNVMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jTableDSNVMouseClicked
         try {
            int maNhanVien = Integer.valueOf(jTableDSNV.getValueAt(jTableDSNV.getSelectedRow(), 0).toString());
            DTONhanVien dtoNhanVien= bllNV.layNhanVienTheoMa(maNhanVien);
            if(dtoNhanVien != null){
                jtxtMaNV.setText(String.valueOf(dtoNhanVien.getMaNV()));
                jtxtHoTen.setText(dtoNhanVien.getHoTen());
                //gioi tinh
                if("Nam".equals(dtoNhanVien.getGioiTinh()))
                    jrabtnNam.setSelected(true);
                else
                    jrabtnNu.setSelected(true);
                
                jtxtNgaySinh.setText(String.valueOf(dtoNhanVien.getNgaySinh()));
                jtxtCmnd.setText(dtoNhanVien.getCmnd());
                jtxtDienThoai.setText(dtoNhanVien.getDienThoai());
                jtxtDiaChi.setText(dtoNhanVien.getDiaChi());
                //hoc vi
                if("Bác sĩ".equals(dtoNhanVien.getHocVi()))
                    jrabtnBacSi.setSelected(true);
                else
                    jrabtnYTa.setSelected(true);
                jtxtChuyenKhoa.setText(dtoNhanVien.getDtoCK().getTenChuyenKhoa());
                jtxtChucVu.setText(dtoNhanVien.getDtoCV().getTenChucVu());
            }
            else
                JOptionPane.showMessageDialog(null, "Không có nhân viên này");
        } catch (Exception e) {
        }
    }//GEN-LAST:event_jTableDSNVMouseClicked

    private void jbtnSuaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbtnSuaActionPerformed
        try{
            int maNV = -1;
            maNV = Integer.valueOf(jTableDSNV.getValueAt(jTableDSNV.getSelectedRow(), 0).toString());
            if(maNV != -1)
            {
                SuaThongTinNhanVien nv = new SuaThongTinNhanVien(maNV);
                Dimension dim = Toolkit.getDefaultToolkit().getScreenSize();
                nv.setLocation((dim.width - nv.getWidth())/2, (dim.height - nv.getHeight())/2);
                nv.setVisible(true);
            }
        }catch(Exception e){
            
        }
        
    }//GEN-LAST:event_jbtnSuaActionPerformed

