    private void LayDLVaoBang(){
         try {
            for(DTONhanVien dtoNV : bllNV.LayToanBoNhanVien()){
                modelNV.addRow(new Object[]{dtoNV.getMaNV(), dtoNV.getHoTen(), 
                    dtoNV.getNgaySinh(), dtoNV.getGioiTinh()});
            }
        } catch (Exception e) {
        }
    }

