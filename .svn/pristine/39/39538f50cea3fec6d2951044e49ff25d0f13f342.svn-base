        LayDLVaoBang();
    }//GEN-LAST:event_btnReloadActionPerformed

    private void jbtnTimActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbtnTimActionPerformed
        try{
            if(!"".equals(jtxtTim.getText().trim())){
                String tim = jtxtTim.getText().trim();
                for(int i = jTableDSNV.getRowCount() - 1; i>=0 ; i--){
                    modelNV.removeRow(i);
                }  
                for(DTONhanVien dtoNV : bllNV.timNhanVien(tim)){
                    modelNV.addRow(new Object[]{dtoNV.getMaNV(), dtoNV.getHoTen(), 
                        dtoNV.getNgaySinh(), dtoNV.getGioiTinh()});
                }
            }
            else
                JOptionPane.showMessageDialog(null, "Bạn muốn tìm gì, nhập vào nhé");
        }
        catch(Exception e){
            
        }
    }//GEN-LAST:event_jbtnTimActionPerformed

    private void jbtnXoaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jbtnXoaActionPerformed
        try{
            int[] dong = jTableDSNV.getSelectedRows();
            if(dong.length > 0){
                if(JOptionPane.showConfirmDialog(null, "Bạn có chắc muốn xóa?", "Thông báo", JOptionPane.YES_NO_OPTION, JOptionPane.QUESTION_MESSAGE)==JOptionPane.YES_OPTION){
                    int dem = 0;
                    for(int i = dong.length - 1; i >= 0; i--){
                        int maNV = Integer.valueOf(jTableDSNV.getValueAt(dong[i], 0).toString());
                        if(bllNV.xoaNhanVien(maNV)){
                            modelNV.removeRow(dong[i]);
                            dem++;
                        }
                        else
                            JOptionPane.showMessageDialog(null, "Không thể xóa");
                    }
                    if(dem==dong.length){
                        JOptionPane.showMessageDialog(null, "Đã xóa nhân viên thành công");
                    }
                }
            }
            else
                JOptionPane.showMessageDialog(null, "Vui lòng chọn mục muốn xóa");
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null, "Xóa bị lỗi, không thể xóa!");
        }
    }//GEN-LAST:event_jbtnXoaActionPerformed

